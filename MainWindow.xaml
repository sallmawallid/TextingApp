<Window x:Class="TextingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextingApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Name="HostButton" Content="Host" Width="100" Height="30" Margin="10" Click="HostButton_Click"/>
            <Button Name="ClientButton" Content="Client" Width="100" Height="30" Margin="10" Click="ClientButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
